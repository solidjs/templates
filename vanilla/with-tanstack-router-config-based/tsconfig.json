{
  "compilerOptions": {
    // General
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "target": "ESNext",

    // Modules
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "bundler",

    // Type Checking & Safety
    "skipLibCheck": true,
    "strict": true
  }
}
